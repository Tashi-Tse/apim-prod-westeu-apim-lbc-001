<!--
    - Policies are applied in the order they appear.
    - Position <base/> inside a section to inherit policies from the outer scope.
    - Comments within policies are not preserved.
-->
<!-- Add policies as children to the <inbound>, <outbound>, <backend>, and <on-error> elements -->
<policies>
	<!-- Throttle, authorize, validate, cache, or transform the requests -->
	<inbound>
		<base />
		<!-- Backend = Function App -->
		<set-backend-service base-url="https://funcapp-prod-westeu-deviceinfo-lbc-001-cjarc4f0cqendbht.westeurope-01.azurewebsites.net" />
		<!-- Extern: /internal/v1/deviceinfo/{deviceName}
         Intern: /api/deviceinfo/{deviceName} -->
		<rewrite-uri template="/api/deviceinfo/{deviceName}" />
		<!-- Function key -->
<set-query-parameter name="code" exists-action="override">
  <value>{{func-deviceinfo-key}}</value>
</set-query-parameter>

	</inbound>
	<!-- Control if and how the requests are forwarded to services  -->
	<backend>
		<base />
	</backend>
	<!-- Customize the responses -->
	<outbound>
		<base />
	</outbound>
	<!-- Handle exceptions and customize error responses  -->
	<on-error>
		<base />
	</on-error>
</policies>
